<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/classMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/modifyClassLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_medium"
                android:text="@string/group1"
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtClassGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_medium"
                android:text="1"
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_medium"
                android:text="  :  "
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtClassStartHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_medium"
                android:text="8:00 AM"
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_medium"
                android:text=" - "
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtClassEndHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_medium"
                android:text="9:30 AM"
                android:textColor="@color/secondary_text_color"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtClassSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_regular"
                android:text="Base de donnÃ©es"
                android:textColor="@color/primary_text_color"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_regular"
                android:text=" - "
                android:textColor="@color/primary_text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtClassType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tabularasa_regular"
                android:text="TD"
                android:textColor="@color/primary_text_color"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/modifyClassLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btnModify"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_modify"
            app:tint="@color/primary_color" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_delete"
            app:tint="#FF332E" />

    </LinearLayout>

    <!--        TODO: Idea: Add class status: (finished, didn't start ...ect)-->

</RelativeLayout>